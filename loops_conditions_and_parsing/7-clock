#!/usr/bin/env bash
#Bash script that displays the time for 12 hours and 59 minutes:

hour=0
minute=0

# Loop through hours (0 to 11)
while [[ $hour -le 11 ]]; do
  # Loop through minutes (1 to 59)
  while [[ $minute -le 59 ]]; do
    # Display the formatted time (zero-padded for single digits)
    printf "%02d:%02d\n" "$hour" "$minute"
    ((minute++))  # Increment minute counter
  done
  ((minute=0))  # Reset minute counter for next hour
  ((hour++))    # Increment hour counter
done

# Limit output to the first 70
head -n 70
